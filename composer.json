{
	"name": "phpgt/build",
	"description": "Client-side build system for PHP projects.",
	"license": "MIT",

	"require": {
		"php": ">=7.4",
		"ext-json": "*",
		"phpgt/cli": "^1.3.0",
		"webmozart/glob": "4.*",
		"composer/semver": "3.*"
	},

	"require-dev": {
		"phpunit/phpunit": "^9.5",
		"phpstan/phpstan": "^1.4"
	},

	"autoload": {
		"psr-4": {
			"Gt\\Build\\": "./src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gt\\Build\\Test\\": "./test/phpunit"
		}
	},

	"bin": [
		"bin/build"
	],

	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/PhpGt"
		}
	]
}
