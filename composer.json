{
	"name": "phpgt/build",
	"description": "Client-side build system for PHP projects.",
	"license": "MIT",

	"require": {
		"php": ">=7.4",
		"ext-json": "*",
		"phpgt/cli": "*",
		"webmozart/glob": "4.*",
		"composer/semver": "3.*"
	},

	"require-dev": {
		"phpunit/phpunit": "9.*"
	},

	"autoload": {
		"psr-4": {
			"Gt\\Build\\": "./src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gt\\Build\\Test\\": "./test/unit"
		}
	},

	"bin": [
		"bin/build"
	]
}
