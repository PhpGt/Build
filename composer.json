{
	"name": "phpgt/build",
	"description": "Client-side build system for PHP projects.",
	"license": "MIT",

	"require": {
		"php": ">=7.4",
		"ext-json": "*",
		"phpgt/cli": "^v1.3.0",
		"webmozart/glob": "v4.4.*",
		"composer/semver": "v3.*"
	},

	"require-dev": {
		"phpunit/phpunit": "^10.1",
		"phpstan/phpstan": "^1.10",
		"phpmd/phpmd": "^2.13",
		"squizlabs/php_codesniffer": "^3.7"
	},

	"autoload": {
		"psr-4": {
			"Gt\\Build\\": "./src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Gt\\Build\\Test\\": "./test/phpunit"
		}
	},

	"bin": [
		"bin/build"
	],

	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/PhpGt"
		}
	]
}
